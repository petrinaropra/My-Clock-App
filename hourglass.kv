<Label>:
    halign: "center"
    markup: True
    font_size: 50
	
<tzLabel@Label>:
	font_size: 20
	
<Button>:	
	background_normal: ''
	font_size: 25
    background_color: (0, 0, 0, 0)
	
<Widget>:
	font_name: 'C:/Windows/Fonts/GOTHIC.ttf'
	
<TextInput>:
    halign: "center"
    font_size: 50 
    multiline: False
    
<RoundedButton@Button>
	canvas.before:
		Color:
			rgba: (0, 0, 1, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [15]
			
<Rounded1Button@Button>
	canvas.before:
		Color:
			rgba: (1, 0, 0, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [15]
            
<ButtonBoxLayout@BoxLayout>:
	orientation: 'horizontal'
	height: 90
	padding: 20
	spacing: 20
	size_hint: (1, None)
	
<TabbedPanelItem>:
	font_size: 15
	background_color: "#4b0082"
    
TabbedPanel:
	alarm_time: time_input
	do_default_tab: False
	background_image: 'C:/Users/Able Valued Client/Pictures/bg.png'
    
	TabbedPanelItem:
		text: "Clock"
  
		BoxLayout:
			orientation: 'vertical'

			Label:
				id: time 
				halign: 'center'
                font_size: 20
        
	TabbedPanelItem:
		text: "Stopwatch"
		
		BoxLayout: 
			orientation: "vertical"

			Label:
				id: stopwatch
				font_size: 60
				
			ButtonBoxLayout:

				RoundedButton:
					id: start_stop
					text: 'Start'
					on_press: app.start_stop()
					
				Rounded1Button:
					id: reset
					text: 'Reset'
					on_press: app.reset()
            
    TabbedPanelItem:
		text: "Alarm"
        
		BoxLayout: 
			orientation: "vertical"
            padding: 20
			spacing: 20
			
            Label:
                id: check_time
				text: 'Enter time in "HH:MM AM/PM" format:\n For example, [font=GOTHICB]09:49 PM[/font]'
                font_size: 17
                 
            TextInput:
				id: time_input
                
                
            ButtonBoxLayout:
                     
                Rounded1Button: 
                    text: 'Set Alarm'
                    on_press: app.press(time_input.text)
                    
    TabbedPanelItem:
        text: "Timer"
        
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing:20
            
            Label:
                id: show
                text: 'Enter the time to countdown in this format "HH:MM:SS"\n For example, [font=GOTHICB]00:00:30[/font]'
                font_size: 17
                
            TextInput:
                id: text_input
                text: '00:00:00'
                            
            ButtonBoxLayout:
                
                RoundedButton:
                    id: button
                    text: "Start"
                    on_press: app.toggle()
                    
                Rounded1Button
                    text: "Pause"
                    on_press: app.pause()
      
    TabbedPanelItem:
        text: "World\n Clock"
                         
		BoxLayout:
			orientation: 'vertical'
            size_hint: (1, 1)
                
            Label:
                id: okay
                font_size: 22                 
        
            tzLabel:
                id: okay1
                    
            tzLabel:
                id: okay2
                    
            tzLabel:
                id: okay4
        
            tzLabel:
                id: okay6
                       
            tzLabel:
                id: okay8
                    
            tzLabel:
                id: okay10 
                    
            tzLabel:
                id: okay12 
                    
            tzLabel:
                id: okay14		
    
           
                    
                
